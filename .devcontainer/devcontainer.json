{
	"name": "NodeBot for Whatsapp",
    "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "18"
    }
  },
  "customizations": {
    "vscode": {
        "extensions": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode"
  ]
    }
  },
  "forwardPorts": [3000, 3001], // abrí puertos según necesites
  "postCreateCommand": "npm install",
  "remoteUser": "node"
